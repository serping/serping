{
  "compilerOptions": {

    "target": "es2016",                                   
    "module": "commonjs",                                 
    "esModuleInterop": true,                              
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@tests/*": [
        "./tests/*"
      ],
      "@/*": [
        "./*"
      ]
    },
  },
  "typeRoots": ["./node_modules/@types"],
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ], 
  "scripts": {
    "prepare": "node ./scripts/update-tsconfig.js",
    "postinstall": "node ./scripts/update-tsconfig.js"
  } 
  
}
